<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:minWidth="25px"
    android:minHeight="25px"
    android:gravity="top">
    <TextView
        android:text="Welcome to the app!"
        android:layout_marginLeft="70.0dp"
        android:textColor="#ff131cf7"
        android:textSize="28dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="61.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:layout_marginTop="0.0dp"
        android:layout_marginBottom="0.0dp"
        
        />
    <TextView
        android:text="Choose one of the following functions.
Navigation system or mesuarement."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="78.0dp"
        android:textSize="22dp"
        android:id="@+id/textView2" />
    <Button
        android:text="Navigation"
        android:layout_width="250.0dp"
        android:textSize="22sp"
        android:background="@android:color/holo_blue_bright"
        android:layout_height="wrap_content"
        android:id="@+id/button1" />
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="20.5dp"
        android:progressBackgroundTint="@android:color/black"
        android:id="@+id/progressBar1" />
    <Button
        android:text="Measurement"
        android:layout_width="250.0dp"
        android:textSize="22sp"
        android:background="@android:color/holo_blue_bright"
        android:layout_height="wrap_content"
        android:id="@+id/button2" />

</LinearLayout>
